{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Contribution List</h1>
    <p class="count">
        Displaying {{ contributions|length }} contributions of {{ contributions.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Person</th>
                <th>Role</th>
                <th>Work</th>
            </tr>
        </thead>
        <tbody>
            {% for contribution in contributions %}
                <tr>
                    <td>
                        <a href="{{ path('person_show', {'id': contribution.person.id}) }}">
                            {{ contribution.person }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('role_show', {'id': contribution.role.id}) }}">
                            {{ contribution.role }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('work_show', {'id': contribution.work.id}) }}">
                            {{ contribution.work }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(contributions) }}
    </div>

{% endblock %}
