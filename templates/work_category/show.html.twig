{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Work Category</h1>
{% endblock %} 

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class="btn-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('work_category_index') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back
                </a>
                <a href="{{ path('work_category_edit', { 'id': workCategory.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('work_category_delete', { 'id': workCategory.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this WorkCategory?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            </div>
        </div>
    {% endif %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ workCategory.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ workCategory.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workCategory.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ workCategory.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ workCategory.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'work/workList.html.twig' with {'works': workCategory.works} %}

{% endblock %}
