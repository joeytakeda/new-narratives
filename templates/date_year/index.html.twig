{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Date Year List</h1>
    <p class="count">
        Displaying {{ dateYears|length }} date years of {{ dateYears.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Work</th>
            </tr>
        </thead>
        <tbody>
            {% for dateYear in dateYears %}
                <tr>
                    <td>{{ dateYear.value }}</td>
                    <td>
                        <a href="{{ path('date_category_show', {'id': dateYear.dateCategory.id}) }}">
                            {{ dateYear.dateCategory }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('work_show', {'id': dateYear.work.id}) }}">
                            {{ dateYear.work }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(dateYears) }}
    </div>

{% endblock %}
